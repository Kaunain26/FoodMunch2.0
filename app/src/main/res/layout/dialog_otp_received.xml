<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imgSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_success" />

        <TextView
            android:id="@+id/txtOTPMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgSuccess"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/dialog_title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/darkBlue"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtOtpNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtOTPMessage"
            android:layout_marginTop="20dp"
            android:text="@string/dialog_otp_note"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#FD1818"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/txtOtpNote"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_rounded_blue"
            android:text="@string/btn_txt_ok"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtCounter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/txtOtpNote"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="5"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>